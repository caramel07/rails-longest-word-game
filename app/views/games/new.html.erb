<div class="container">
  <div id="square-letters">
    <% $letters.each do |letter|%>
    <div><%=letter %></div>
    <% end %>
  </div>
</div>

<div class="form">
  <form action="/score" method="post">
    <input type="text" name="word" value="<%= params[:word]%>"  placeholder="Enter your word">
    <input type="submit"> <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
